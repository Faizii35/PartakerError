<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#EEEEEE"
        card_view:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivRVMDFDonorItem"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/default_profile_pic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRVMDFDonorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/cardview_shadow_start_color"
                android:layout_toEndOf="@+id/ivRVMDFDonorItem"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRVMDFDonorDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRVMDFDonorName"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/ivRVMDFDonorItem"
                android:singleLine="true"
                android:textColor="@color/cardview_shadow_start_color"
                android:textSize="18sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

