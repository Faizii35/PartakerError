<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#EEEEEE"
        card_view:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivRVMRFReceiverItem"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/default_profile_pic">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRVMRFReceiverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/cardview_shadow_start_color"
        android:layout_toEndOf="@+id/ivRVMRFReceiverItem"
        android:textSize="20sp">
    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRVMRFReceiverDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_shadow_start_color"
        android:layout_toEndOf="@+id/ivRVMRFReceiverItem"
        android:layout_below="@+id/tvRVMRFReceiverName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:singleLine="true">
    </androidx.appcompat.widget.AppCompatTextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
</RelativeLayout>